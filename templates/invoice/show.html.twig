{% extends 'base.html.twig' %}
{% block title %}
    Invoice - Order
    {{ invoice.id }}
{% endblock %}
{% import 'components/button/index.html.twig' as buttons %}
{% block stylesheets %}
    <style>
        /* A4 size in portrait: 210mm x 297mm */
        @media print {
            @page {
                size: A4;
                margin: 0; /* Remove default margins */
            }
            .no-print { display: none; }
            body {
                margin: 0;
                padding: 0;
                height: 297mm; /* A4 height */
                width: 210mm; /* A4 width */
                overflow: hidden;
            }
            .min-h-screen {
                min-height: auto;
                height: 297mm; /* Fixed to A4 height */
                width: 210mm;
                margin: 0 auto;
                padding: 0;
                display: block;
            }
            .invoice-box {
                box-shadow: none;
                border: 1px solid #e5e7eb;
                height: 287mm; /* Slightly less than A4 to account for border/padding */
                width: 200mm; /* Slightly less for padding */
                padding: 5mm; /* Reduced padding */
                margin: 0 auto;
                overflow: hidden; /* Prevent overflow */
                font-size: 12px; /* Base font size for compactness */
            }
            /* Compact layout */
            .invoice-box * {
                margin-bottom: 0.2rem !important;
                line-height: 1.1 !important;
            }
            .text-3xl { font-size: 1.25rem !important; }
            .text-xl { font-size: 1rem !important; }
            .text-lg { font-size: 0.875rem !important; }
            table { font-size: 0.75rem !important; }
            th, td { padding: 0.2rem 0.5rem !important; }
            .mt-6 { margin-top: 0.5rem !important; }
            .pb-6 { padding-bottom: 0.5rem !important; }
        }
    </style>
{% endblock %}
{% block body %}
    <!-- Container -->
    <div class="min-h-screen flex items-center justify-center text-gray-600 dark:text-gray-300">
        <div class="max-w-4xl w-full space-y-8" x-data="invoiceData()">
            {{ buttons.button_back(path('app_invoice_index')) }}

            <!-- Invoice Box -->
            <div class="invoice-box bg-white p-8 rounded-xl shadow-lg dark:bg-gray-800">
                <!-- Header -->
                <div class="flex justify-between items-center border-b pb-6">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-300">
                            {{ 'invoice.name'|trans }}
                        </h1>
                        <p>
                            {{ 'invoice.reference'|trans }}
                            :
                            <span id="invoice" data-id="{{ invoice.id }}">
                                {{ invoice.id }}
                            </span>
                        </p>
                    </div>
                    <div class="text-right">
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-300">
                            {{ app.user.username }}
                        </h2>
                        <p>
                            {{ app.user.address }}
                        </p>
                        <p>
                            {{ app.user.email }}
                        </p>
                    </div>
                </div>

                <!-- Billing Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-300">
                            {{ 'invoice.billed'|trans }}
                        </h3>
                        <p>
                            {{ invoice.orderId.customer }}
                        </p>

                        <p>
                            {{ invoice.orderId.customerAddress }}
                        </p>
                        <p>
                            City:
                            <span>
                                {customer.city}
                            </span>
                        </p>
                        <p>
                            Postal Code:
                            <span>
                                {customer.cp}
                            </span>
                        </p>
                    </div>
                    <div class="text-right">
                        <p>
                            {{ 'invoice.date.invoice'|trans }}:
                            <span>
                                {{ invoice.createdAt|date('d/m/Y') }}
                            </span>
                        </p>
                        <p>
                            {{ 'invoice.date.transaction'|trans }}:
                            <span>
                                {{ invoice.createdAt|date('d/m/Y') }}
                            </span>
                        </p>
                        <p>
                            {{ 'invoice.status'|trans }}:
                            <span class="font-medium">
                                {{ invoice.status }}
                            </span>
                        </p>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="mt-6">
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead class="bg-gray-100">
                                <tr class="font-semibold text-gray-900">
                                    <th class="py-2 px-4">
                                        Descripci√≥n
                                    </th>
                                    <th class="py-2 px-4 ">
                                        {{ 'field.stock'|trans }}
                                    </th>
                                    <th class="py-2 px-4 ">
                                        {{ 'field.price'|trans }}
                                    </th>
                                    <th class="py-2 px-4 text-right">
                                        Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for detail in invoice.orderId.orderDetails %}
                                    <tr class="border-b">
                                        <td class="py-2 px-4">
                                            {{ detail.product.name }}
                                        </td>
                                        <td class="py-2 px-4">
                                            {{ detail.quantity }}
                                        </td>
                                        <td class="py-2 px-4">
                                            {{ detail.unitPrice }}
                                            USD
                                        </td>
                                        <td class="py-2 px-4 text-right">
                                            {{ detail.subtotal }}
                                            USD
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Totals -->
                <div class="mt-6 flex justify-end">
                    <div class="w-full md:w-1/3">
                        <div class="space-y-1">
                            <div class="flex justify-between">
                                <span>
                                    Subtotal
                                </span>
                                <span>
                                    {{ invoice.totalAmount }}
                                    USD
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span>
                                    Tax (0%)
                                </span>
                                <span>
                                    {fees} USD
                                </span>
                            </div>
                            <div class="flex justify-between font-semibold text-lg border-t pt-2">
                                <span>
                                    Total
                                </span>
                                <span>
                                    {{ invoice.totalAmount }}
                                    USD
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-300">
                        {{ 'invoice.information'|trans }}
                    </h3>
                    <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-2 ">
                        <div>
                            <p>
                                Transaction ID:
                                <span>
                                    {{ invoice.id }}
                                </span>
                            </p>
                            <p>
                                {{ 'invoice.payment.amount'|trans }}:
                                <span>
                                    {{ invoice.totalAmount }}
                                    USD
                                </span>
                            </p>
                            <p>
                                {{ 'invoice.payment.method'|trans }}:
                                <span>
                                    Zelle
                                </span>
                            </p>
                        </div>
                        <div>
                            <p>
                                {{ 'invoice.date.transaction'|trans }}:
                                <span>
                                    {{ invoice.createdAt|date('d/m/Y') }}
                                </span>
                            </p>
                            <p>
                                {{ 'invoice.status'|trans }}:
                                <span class="font-medium uppercase">
                                    {{ invoice.status }}
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="mt-6 text-center">
                    <p>
                        {{ 'invoice.greeting.first'|trans }}
                    </p>
                    <p>{{ 'invoice.greeting.second'|trans }}                
                    </p>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-center gap-4 no-print">
                <button @click="window.print()" class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition duration-300">
                    {{ 'btn.print'|trans }} 
                </button>
                <button @click="downloadPDF()" class="bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition duration-300">
                    {{ 'btn.pdf'|trans }}
                </button>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts_botton %}
    <script src="{{ asset('js/invoice.js') }}"></script>
{% endblock %}
