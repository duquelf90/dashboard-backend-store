{% extends 'base.html.twig' %}
{% import 'components/buttons.html.twig' as buttons %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="flex items-center justify-between">
        {{ include('components/title.html.twig', {'txt_label': 'Detalles del Producto'}) }}
        <div class="flex inline-flex items-center">            
            {{ buttons.button_back(path('app_product_index')) }}
            {{ buttons.button_delete('Borrar', path('app_product_delete', {'id': product.id}), product.id) }}
        </div>
    </div>


    <table class="table px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800 text-gray-700 dark:text-gray-400 my-2 px-4">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ product.images }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
