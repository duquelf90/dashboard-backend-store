<div class="fixed top-4 right-4 z-50 space-y-2">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div 
                x-data="{ show: true }" 
                x-init="setTimeout(() => show = false, 5000)" 
                x-show="show" 
                x-transition 
                class="max-w-xs w-full px-4 py-3 rounded-lg shadow-lg border-l-4
                    {% if label == 'success' %} border-green-500 bg-green-50 text-green-800
                    {% elseif label == 'error' %} border-red-500 bg-red-50 text-red-800
                    {% elseif label == 'warning' %} border-yellow-500 bg-yellow-50 text-yellow-800
                    {% else %} border-blue-500 bg-blue-50 text-blue-800{% endif %}">
                <div class="flex items-center justify-between">
                    <p class="text-sm font-medium">{{ message }}</p>
                    <button @click="show = false" class="ml-4 text-lg font-bold leading-none">&times;</button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>