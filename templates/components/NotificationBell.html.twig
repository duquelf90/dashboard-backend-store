<div data-poll="5s" class="relative inline-block">
    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
         {% if unreadCount > 0 %}
         style="animation: swing 0.5s ease-in-out infinite;"
         {% endif %}>
         <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"></path>
    </svg>
</div>
<!-- Badge intermitente -->
{% if unreadCount > 0 %}
  <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs font-bold rounded-full px-1.5"
        style="animation: blink 3s step-start infinite;">
      {{ unreadCount }}
  </span>
{% endif %}

<style>
@keyframes swing {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(15deg); }
  75% { transform: rotate(-15deg); }
}
@keyframes blink {
  0%, 50%, 100% { opacity: 1; }
  25%, 75% { opacity: 0; }
}
</style>