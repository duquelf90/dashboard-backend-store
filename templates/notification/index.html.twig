{% extends 'base.html.twig' %}

    {% block title %}
        Notifications
    {% endblock %}
    
    {% block body %}
    
    <div class="p-4 mx-auto w-full md:p-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-400 mb-6">Notifications</h2>
    
        <div class="space-y-4">
            {% for notification in notifications %}
                <div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
                    
                    <!-- Mensaje de la notificación -->
                    <p class="text-gray-800 dark:text-gray-200">
                        {{ notification.message }}
                    </p>
    
                    <!-- Botones de acción -->
                    <div class="flex gap-2">
                        <form method="post" action="{{ path('notification_mark_read', {'id': notification.id}) }}">
                            <button type="submit" class="px-3 py-1 text-sm font-medium text-white bg-green-500 rounded-lg hover:bg-green-600 dark:bg-green-600 dark:hover:bg-green-700">
                                Mark as Read
                            </button>
                        </form>
    
                        <form method="post" action="{{ path('app_notification_delete', {'id': notification.id}) }}" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="px-3 py-1 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700">
                                Delete
                            </button>
                        </form>
                    </div>
    
                </div>
            {% else %}
                <p class="text-gray-500 dark:text-gray-400">No notifications found.</p>
            {% endfor %}
        </div>
    </div>
    
    {% endblock %}
    