{% import 'components/buttons.html.twig' as buttons %}

{{ form_start(form) }}
<div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full p-8 transition-all duration-300 animate-fade-in px-4 py-3 mb-8">
    <div class="flex flex-col md:flex-row">
        <div class="md:w-1/3 text-center mb-8 md:mb-0">
            <img src="https://i.pravatar.cc/300" alt="Profile Picture" class="rounded-full w-48 h-48 mx-auto mb-4 border-4 border-indigo-800 dark:border-blue-900 transition-transform duration-300 hover:scale-105">
                <h1 class="text-2xl font-bold text-indigo-800 dark:text-white mb-2">
                    {{ user.username }}
                </h1>
                <p class="text-gray-600 dark:text-gray-300"></p>
                <button class="mt-4 bg-indigo-800 text-white px-4 py-2 rounded-lg hover:bg-blue-900 transition-colors duration-300">
                    Edit Profile
                </button>
            </div>
            <div class="md:w-2/3 md:pl-8">
                <div class="grid gap-2 sm:gap-6 mb-2 md:grid-cols-2">
                    <div class="block items-center sm:pt-4">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                Email
                            </span>
                        </label>
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="block items-center sm:pt-4">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                Nombre del negocio
                            </span>
                        </label>
                        {{ form_widget(form.username) }}
                    </div>
                    <div class="block items-center">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                Direccion
                            </span>
                        </label>
                        {{ form_widget(form.address) }}
                    </div>
                    <div class="block items-center">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                Telefono
                            </span>
                        </label>
                        {{ form_widget(form.telephone) }}
                    </div>
                    <div class="block items-center">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                sectores
                            </span>
                        </label>
                        {{ form_widget(form.sector) }}
                    </div>
                    <div class="block items-center">
                        <label class="flex items-center text-sm">
                            <span class="text-gray-700 dark:text-gray-400 mb-2">
                                Rol
                            </span>
                        </label>
                        <div class="flex flex-wrap -mx-2 my-2">
                            <div class="px-2 w-1/2">
                                <label for="color-red" class="block text-gray-700 font-medium mb-2">
                                    <input type="radio" id="color-red" name="color" value="red" class="mr-2">
                                        Red
                                    </label>
                                </div>
                                <div class="px-2 w-1/2">
                                    <label for="color-blue" class="block text-gray-700 font-medium mb-2">
                                        <input type="radio" id="color-blue" name="color" value="blue" class="mr-2">
                                            Blue
                                        </label>
                                    </div>

                                </div>
                            </div>
                            <div class="block items-center">
                                <label class="flex items-center text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 mb-2">
                                        Password
                                    </span>
                                </label>
                                {{ form_widget(form.plainPassword) }}
                            </div>
                            

                        </div><div class="block items-center">
                                <label class="flex items-center text-sm">
                                    <span class="text-gray-700 dark:text-gray-400 mb-2">
                                        Descripcion
                                    </span>
                                </label>
                                {{ form_widget(form.aboutus, { 'attr': {'class': 'block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-textarea focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray', 'rows':'3', 'placeholder':'Descripcion del producto'} }) }}
                            </div>
                    </div>
                </div>

                {{ form_widget(form) }}
                {{ buttons.button_submit(button_label) }}
                {{ form_end(form) }}
            </div>
            