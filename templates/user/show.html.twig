{% extends 'base.html.twig' %}
    {% import 'components/buttons.html.twig' as buttons %}

{% block title %}Detalles{% endblock %}

{% block body %}
    <div class="flex items-center justify-between">
        {{ include('components/title.html.twig', {'txt_label': 'Detalles'}) }}
        <div class="flex inline-flex items-center">            
            {{ buttons.button_back(path('app_user_index')) }}
            {{ buttons.button_delete('Borrar', path('app_user_delete', {'id': user.id}), user.id) }}
        </div>
    </div>    

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full p-8 transition-all duration-300 animate-fade-in">
        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/3 text-center mb-8 md:mb-0">
                <img src="{{ asset('uploads/profile_images/' ~ user.logo) }}" alt="{{user.username}}" class="rounded-full w-48 h-48 mx-auto mb-4 border-4 border-indigo-800 dark:border-blue-900 transition-transform duration-300 hover:scale-105">
                <h1 class="text-2xl font-bold text-indigo-800 dark:text-white mb-2">{{user.username}}</h1>
                <p class="text-gray-600 dark:text-gray-300">{{user.roles |json_encode}}</p>
                <div class="w-full md:w-1/2 mx-auto">
                    {{ buttons.button_new('Editar', path('app_user_edit', {'id': user.id}), 'mt-4 bg-indigo-800 text-white px-4 py-2 rounded-lg hover:bg-blue-900 transition-colors duration-300') }}

                </div>
            </div>
            <div class="md:w-2/3 md:pl-8">
                <h2 class="text-xl font-semibold text-indigo-800 dark:text-white mb-4">Acerca de</h2>
                <p class="text-gray-700 dark:text-gray-300 mb-6">
                    {{user.aboutus}}
                </p>
                <h2 class="text-xl font-semibold text-indigo-800 dark:text-white mb-4">Sector</h2>
                
                <div class="flex flex-wrap gap-2 mb-6">
                    <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm">{{user.sector}}</span>                    
                </div>
                <h2 class="text-xl font-semibold text-indigo-800 dark:text-white mb-4">Informaci√≥n de contacto</h2>
                <ul class="space-y-2 text-gray-700 dark:text-gray-300">
                    <li class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-800 dark:text-blue-900" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                        </svg>
                        {{ user.email }}
                    </li>
                    <li class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-800 dark:text-blue-900" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                        </svg>
                        {{user.telephone}}
                    </li>
                    <li class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-indigo-800 dark:text-blue-900" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                        </svg>
                        {{user.address}}
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
